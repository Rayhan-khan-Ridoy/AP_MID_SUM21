@model IEnumerable<FMSApplication.Models.Fixture>

@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h2>FC .NET Football Club Fixtures</h2>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Opponent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Match_Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Match_Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Result)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Opponent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Match_Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Match_Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Result)
            </td>
            <td>
                <a href="/Fixture/Details/@item.Id" class="btn btn-warning">Details</a>
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
