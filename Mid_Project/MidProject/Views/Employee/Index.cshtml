@model IEnumerable<FMSApplication.Models.EmployeeInformation>

@{
    ViewBag.Title = "Index";
}


<head>
    <style>
        .button_add {
            margin-left: 500px;
        }
    </style>
</head>
<body>
    <form method ="post" action="/Employee/Index" >

        <h2 align="center">Employee List</h2>

        <p>
            <!-- @Html.ActionLink("Create New", "Create", new { @class = "btn btn-primary" })-->
            <a href="/Employee/Create" class="button_add btn btn-success">Create New</a>
            <input type="text" id="form1" class="form-control" name="Name" /><br />
            <input type="submit" name="submit" value="submit" id="form1" class="btn btn-danger" />
            
           <!-- <input type=submit name="submit" value="submit" class="btn btn-danger" />-->

        </p>
    </form>

    <br />
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.E_Designation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JoiningDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactYear)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.E_Designation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.JoiningDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContactYear)
                </td>
                <td>
                    <!--@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })-->
                    <a href="/Employee/Edit/@item.Id" class="btn btn-primary">Update</a>
                    <hr>
                    <a href="/Employee/Details/@item.Id" class="btn btn-warning">Details</a>
                    <hr>
                    <a href="/Employee/Delete/@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }

    </table>

</body>

