@model IEnumerable<FMSApplication.Models.Player>

@{
    ViewBag.Title = "Defender";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Defenders</title>
    <style>
        .button_add {
            margin-left: 400px;
        }
    </style>
</head>
<body>

    <br />
    <h2 align="center">Defenders List</h2>
    <p>
        <!-- @Html.ActionLink("Create New", "Create", new { @class = "btn btn-primary" })-->
        <a href="/Player/Create" class="button_add btn btn-success">Create New</a>
        <a href="/Player/Defenders" class="btn btn-default">Defenders</a>
        <a href="/Player/CDM" class="btn btn-danger">CDM</a>
        <a href="/Player/Forward" class="btn btn-warning">Forwards</a>
        <a href="/Player/Gk" class="btn btn-primary">Goalkeeper</a>

    </p>
   
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nationality)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GoalScored)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Assist)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FitnessId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SalaryId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JoiningDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dob)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nationality)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Age)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Position)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GoalScored)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Assist)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FitnessId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SalaryId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.JoiningDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ContactYear)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Dob)
        </td>
        <td>
         <!--@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
             @Html.ActionLink("Details", "Details", new { id = item.Id }) |
             @Html.ActionLink("Delete", "Delete", new { id = item.Id })-->
            <a href="/Player/Edit/@item.Id" class="btn btn-primary">Update</a>
            <hr>
            <a href="/Player/Details/@item.Id" class="btn btn-warning">Details</a>
            <hr>
            <a href="/Player/Delete/@item.Id" class="btn btn-danger">Delete</a>
        </td>
    </tr>
        }

    </table>
</body>
</html>
