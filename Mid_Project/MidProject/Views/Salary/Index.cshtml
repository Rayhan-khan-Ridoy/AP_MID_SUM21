@model IEnumerable<FMSApplication.Models.Salary>

@{
    ViewBag.Title = "Index";
}

<head>
    <style>
        .button_add {
            margin-left: 500px;
        }
    </style>
</head>
<body>

    <h2>Index</h2>

    <p>
        <a href="/Salary/Create" class="button_add btn btn-success">Create New</a>
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SalaryGrade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bonus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SalaryStatus)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SalaryGrade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Bonus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SalaryStatus)
                </td>
                <td>
                    <a href="/Salary/Edit/@item.Id" class="btn btn-primary">Update</a>
                    <a href="/Salary/Details/@item.Id" class="btn btn-warning">Details</a>
                    <a href="/Salary/Delete/@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }

    </table>
</body>